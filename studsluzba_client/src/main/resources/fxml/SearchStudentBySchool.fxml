<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzba.ui.SearchStudentBySchoolController"
      spacing="12" style="-fx-padding: 24;">

    <Label text="Pretraga studenata po srednjoj školi"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Srednja škola:"/>
        <ComboBox fx:id="cmbSkole" prefWidth="420"/>
        <Button text="Pretraži" onAction="#onSearch"/>
        <ProgressIndicator fx:id="progress" visible="false"/>
    </HBox>

    <TableView fx:id="tbl" prefHeight="460">
        <columns>
            <TableColumn fx:id="colIme" text="Ime" prefWidth="140"/>
            <TableColumn fx:id="colPrezime" text="Prezime" prefWidth="160"/>
            <TableColumn fx:id="colIndeks" text="Indeks" prefWidth="140"/>
            <TableColumn fx:id="colAktivan" text="Aktivan" prefWidth="80"/>
        </columns>
    </TableView>

    <Label fx:id="lblMsg" textFill="red"/>
</VBox>
