<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzba.ui.SearchStudentByNameController"
      spacing="12" style="-fx-padding: 24;">

    <Label text="Pretraga studenata (ime/prezime)"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="30"/>
        </columnConstraints>

        <Label text="Ime:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIme" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Prezime:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="txtPrezime" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Stud. program:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtProgram" promptText="npr. RN" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Godina upisa:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="txtGodina" promptText="npr. 2024" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="Broj:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtBroj" promptText="npr. 12" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Button text="Pretraži" onAction="#onSearch"
                GridPane.rowIndex="2" GridPane.columnIndex="3"/>
    </GridPane>

    <ProgressIndicator fx:id="progress" visible="false"/>

    <TableView fx:id="tbl" prefHeight="420">
        <columns>
            <TableColumn fx:id="colIme" text="Ime" prefWidth="140"/>
            <TableColumn fx:id="colPrezime" text="Prezime" prefWidth="160"/>
            <TableColumn fx:id="colIndeks" text="Indeks" prefWidth="140"/>
            <TableColumn fx:id="colAktivan" text="Aktivan" prefWidth="80"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnPrev" text="◀" onAction="#onPrev"/>
        <Label fx:id="lblPage" text="1 / 1"/>
        <Button fx:id="btnNext" text="▶" onAction="#onNext"/>
    </HBox>

    <Label fx:id="lblMsg" textFill="red"/>
</VBox>
